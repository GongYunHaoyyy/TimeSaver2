<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/accent_white"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/ib_opendrawer"
        android:layout_width="28dp"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/setting_spacing"
        android:layout_margin="9dp"
        android:background="@drawable/ic_menu"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/ib_opendrawer"
        android:layout_marginLeft="@dimen/fab_margin"
        android:gravity="center"
        android:text="TimeLine"
        android:textColor="@color/text_color"
        android:textSize="@dimen/sub_big_text"/>

    <ImageButton
        android:id="@+id/ib_add"
        android:layout_width="@dimen/toast_icon_size"
        android:layout_height="@dimen/toast_icon_size"
        android:layout_marginRight="@dimen/setting_spacing"
        android:layout_toLeftOf="@+id/ib_search"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_add"/>

    <ImageButton
        android:id="@+id/ib_search"
        android:layout_width="@dimen/toast_icon_size"
        android:layout_height="@dimen/toast_icon_size"
        android:layout_marginRight="@dimen/setting_spacing"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_search"
        android:layout_alignParentRight="true"/>


</RelativeLayout>
