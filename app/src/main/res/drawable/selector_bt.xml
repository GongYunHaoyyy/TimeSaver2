<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"> <!--按压状态下-->
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_dark_blue"/>
            <corners android:radius="@dimen/scroll_bar_size"/>
        </shape>
    </item>
    <item android:state_enabled="false"> <!--不可操作状态下-->
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_gray"/>
            <corners android:radius="@dimen/scroll_bar_size"/>
        </shape>
    </item>
    <item>             <!--普通状态下-->
        <shape android:shape="rectangle">
            <solid android:color="@color/accent_blue"/>
            <corners android:radius="@dimen/scroll_bar_size"/>
        </shape>
    </item>
</selector>